    <script>
      function validateForm() {
        //let x = document.forms["myForm"]["code"].value;
        let x = document.getElementById('code').value;
        //console.info(x)
        if (x.length === 6) {
          window.location = `http://localhost:3000/event/${x}`;
        } else {
          alert('Code must be 6 digits long!')
        }
      }
    </script>
  </head>
  <body>
      <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
          <a style="color: #115402; font-weight: bold" class="navbar-brand" href="http://localhost:3000">slido</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

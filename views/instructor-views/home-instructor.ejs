          // TODO: u suprotnom treba postaviti flag bday shown na false, tj. pozvati neku funkciju koja će to uraditi
        }
      });

      function copyToClipboard(code) {
        // Get the text field
        var copyText = code;

        // Copy the text inside the text field
        navigator.clipboard.writeText(copyText);

        // Alert the copied text
        alert("Copied the code: " + (copyText));
      }

      function restrictFirstZero(e) {
        if (e.srcElement.value.length === 0 && e.which === 48) {
          e.preventDefault();
          return false;
        }
      }

      function validateForm() {
        let x = document.forms["myForm"]["code"].value;
        if (x.length !== 6) {
          alert("Code must be 6 numbers long!");
          return false;
        }
      }

      function updayBdayShown() {
        $.ajax({
          url: "/instructor/instructors/updatebdayshown/",
          type: 'POST',
        }).done(function (data) {
          //console.info(data)
          $('#bdayModal').modal('hide');
        });
      }

      function archiveEvent(code, i) {
        $.ajax({
          url: "/instructor/archive-event",
          type: 'POST',
          data: {
            code: code
          },
        }).done(function (data) {
          $(`#card${i}`).remove();
          window.location.reload();
        });
      }

      function randomCode() {
        const randomCode = Math.floor(100000 + Math.random() * 900000);
        //console.info(randomCode);
        let codeInput = document.querySelector('.thisCode');
        codeInput.value = randomCode;
      }

      function startedEvent(code) {
        $.ajax({
          url: `/instructor/event/${code}/started`,
          type: 'POST',
        }).done(function (data) {
          console.info(data)
        });
      }
